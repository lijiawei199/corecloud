definitions:
  baseVO:
    type: object
    properties:
      code:
        type: integer
      msg:
        type: string
      data:
        type: string
  userVO:
    type: object
    properties:
      doubLevel:
        type: string
      singLevel:
        type: string
      skiType:
        type: string
      cardName:
        type: string
      bank:
        type: string
      cardNum:
        type: string
      gender:
        type: string
      avataUrl:
        type: string
      nickName:
        type: string  
              
      
  tokenVO:
    type: object
    properties:
      token:
        type: string
        
  
  fieldVO:
    type: object
    properties:
      busyTime:
        type: string
      id:
        type: integer  
      pos:
        type: string
      name:
        type: string
      collect:
        type: boolean  
           
  
  orderVO:
    type: object
    properties:
      skiType:
        type: string 
        description: 滑板种类  
      action:
        type: string
        description: 想学的动作
      time:
        type: string
        description: 预约时间
      tel:
        type: string
        description: 联系电话
      eat:
        type: string
        description: 0请吃饭 1不请吃饭
      state:
        type: string
        description: 订单状态
      money:
        type: string
        description: 数额
      stuOpenId:
        type: string
        description: 学员ID
      coachOpenId:
        type: string
        description: 教练ID
      fieldId:
        type: integer
        description: 滑雪场ID 
      avataUrl:
        type: string
        description: 头像地址 
      fieldName:
        type: string
        description: 滑雪场名字 
      singLevel:
        type: string
        description: 滑雪水平
      orderId:
        type: string
        description: 订单id
      nickName: 
        type: string
        description: 学员昵称
      gender: 
        type: string
        description: 性别
      refundApllyTime: 
        type: string
        description: 退款申请时间
      refundSuccesTime: 
        type: string
        description: 退款成功
      eat: 
        type: string   
        description: 0 请吃饭 1不请 
            
          
        
             
      
            
         
                     
         

  
  
        
                


