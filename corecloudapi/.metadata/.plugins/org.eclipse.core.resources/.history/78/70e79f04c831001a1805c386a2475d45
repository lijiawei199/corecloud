definitions:
  baseVO:
    type: object
    properties:
      code:
        type: integer
      msg:
        type: string
      data:
        type: string
  userVO:
    type: object
    properties:
      doubLevel:
        type: string
      singLevel:
        type: string
      skiType:
        type: string
      cardName:
        type: string
      bank:
        type: string
      cardNum:
        type: string      
      
  tokenVO:
    type: object
    properties:
      token:
        type: string
        
  
  fieldVO:
    type: object
    properties:
      busyTime:
        type: string
      id:
        type: integer  
      pos:
        type: string
      name:
        type: string
      collect:
        type: boolean  
           
  
  orderVO:
    type: object
    properties:
      skiType:
        type: string 
        description: 滑板种类  
      action:
        type: string
        description: 想学的动作
      time:
        type: string
        description: 预约时间
      tel:
        type: string
        description: 联系电话
      reward:
        type: string
        description: 吃饭0给钱1
      state:
        type: string
        description: 订单状态
      money:
        type: integer
        description: 数额
      stuOpenId:
        type: string
        description: 学员ID
      coachOpenId:
        type: string
        description: 教练ID
      field:
        type: integer
        description: 滑雪场ID  
                     
         

  
  
        
                


